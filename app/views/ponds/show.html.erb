<h1><%= @pond.name %></h1>
<p>Water Type: <%= @pond.water_type %></p>
<p>Resident Frogs and Their Tadpoles:</p>
<ol>
	<% @pond.frogs.each do |frog| %>
		<%= link_to "#{frog.name}", frog %>
		<ol>
				<% frog.tadpoles.each do |tadpole| %>
        <%= link_to "#{tadpole.name}", tadpole %>
        <% end %>
		</ol>
	<% end %>
</ol>

<%= link_to 'Back', ponds_path %>
<%= link_to 'Edit Pond', edit_pond_path(@pond) %> 
<%= link_to "Delete", @pond, :method => :delete, :class => :destroy, data: { confirm: 'Are you sure?' } %>


